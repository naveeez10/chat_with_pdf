generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Document {
  id       String                       @id @default(cuid())
  docID    String
  content  String
  vector   Unsupported("vector(1536)")?
  metadata Json

  @@map("Document")
}
